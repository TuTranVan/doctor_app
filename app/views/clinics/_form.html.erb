<section class="login-block">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 login-sec">
        <h2 class="text-center">THÔNG TIN PHÒNG KHÁM</h2>
        <%= form_for @clinic do |f| %>
          <%= render "shared/error_messages", object: @clinic %>
          
          <%= f.hidden_field :user_id, value: current_user.id %>

          <div class="form-group">
            <%= f.text_field :name, class: "form-control", placeholder: "Tên phòng khám" %>
          </div>

          <div class="form-group">
            <%= f.text_field :phone, class: "form-control", placeholder: "Điện thoại" %>
          </div>

          <div class="form-group">
            <%= f.text_field :address, class: "form-control", placeholder: "Địa chỉ" %>
          </div>

          <div class="form-group">
            <%= f.text_field :city, class: "form-control", placeholder: "Tỉnh/thành phố" %>
          </div>

          <div class="form-group">
            <%= f.text_area :introduce, class: "form-control", placeholder: "Giới thiệu" %>
          </div>

          <div class="form-group">
            <%= f.submit yield(:button_text), class: "btn btn-primary btn-lg btn-block login-btn" %>
          </div>
      <% end %>
    </div>
  </div>
</section>