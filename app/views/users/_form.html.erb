<section class="login-block">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 login-sec">
        <h2 class="text-center">ĐĂNG KÝ</h2>
        <%= form_for (@user), url: yield(:url)  do |f| %>
          <%= render "shared/error_messages", object: @user %>
          
          <div class="form-group">
            <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, class: "form-control", placeholder: "Mật khẩu" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Nhập lại mật khẩu" %>
          </div>

          <div class="row form-group">
            <div class="col-md-6">
              <%= f.radio_button :role, "clinic" %>
              <%= f.label :role, "Phòng khám", value: "clinic" %>
            </div>
            <div class="col-md-6">
              <%= f.radio_button :role, "patient" %>
              <%= f.label :role, "Bệnh nhân", value: "patient" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.submit yield(:button_text), class: "btn btn-primary btn-lg btn-block login-btn" %>
          </div>
          <p class="text-center small"><%= link_to "Đăng nhập ngay", login_path %></p>
      <% end %>
    </div>
  </div>
</section>